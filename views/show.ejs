<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/pokeCard.css" />
    <script src="/static/cardMovement.js" defer></script>
    <title>Index of Pokemon</title>
  </head>
  <body>
    
    <a href="https://pokemon-cards.onrender.com/pokemon"
      ><button class="back">Back</button></a
    >
    <div class="container">
      <div class="cardBox">
        <h2><%=data.name %></h2>
        <img
          class="pokemonImg"
          src="<%=data.img %>"
          alt="Picture of <%=data.name %>"
        />
        <div class="types">
          <ul>
            <% const type = data.type %> <% for(let j = 0; j < type.length;
            j+=1){%>
            <li><%=type[j] %></li>
            <% } %>
          </ul>
        </div>
        <div class="stats">
          <h3>HP: <%=data.stats.hp %></h3>
          <h3>Attack: <%=data.stats.attack %></h3>
          <h3>Defense: <%=data.stats.defense %></h3>
        </div>
      </div>
    </div>
    <a href="/pokemon/<%=index %>/edit"
      ><button class="edit">Edit <%=data.name %></button></a
    >
    <% if(data.type.includes('Grass') || data.type.includes('Bug')){ %>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(111, 190, 77) 5.66%,
          rgb(197, 216, 60) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Fire')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(243, 98, 73) 5.66%,
          rgb(248, 163, 90) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Water')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(41, 177, 230) 5.66%,
          rgb(164, 221, 249) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Normal')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(227, 207, 178) 5.66%,
          rgb(255, 254, 244) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Poison') ||
    data.type.includes('Psychic')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(131, 77, 155) 5.66%,
          rgb(207, 152, 194) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Electric')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(253, 189, 44) 5.66%,
          rgb(255, 238, 35) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Ground') ||
    data.type.includes('Fighting')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(197, 95, 37) 5.66%,
          rgb(238, 226, 189) 94.35%
        );
      }
    </style>
    <% } else if (data.type.includes('Dragon')){%>
    <style>
      .cardBox {
        background-image: linear-gradient(
          45.34deg,
          rgb(214, 207, 200) 5.66%,
          rgb(232, 225, 219) 94.35%
        );
      }
    </style>
    <% } %>
  </body>
</html>
